@model GodzillaRestaurant.Models.FoodType
@{
    ViewData["Title"] = "Delete Food Type";
}

<div class="row justify-content-center p-3">
    <div class="col-md-4 form-card">
        <form asp-action="DeleteFoodType" class="app-form" enctype="multipart/form-data">
            <h5 class="text-center">Are you sure you want to delete this food type?</h5>
            <p><strong>Name: </strong>@Model.FoodTypeName</p>
            <p><strong>Sequence: </strong>@Model.Sequence</p>
            <input type="hidden" asp-for="FoodTypeId" />
            <a asp-action="FoodType" class="btn btn-secondary">Cancel</a>
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>
