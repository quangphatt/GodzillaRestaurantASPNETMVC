@model GodzillaRestaurant.Models.Food
@{
    ViewData["Title"] = "Delete Food";
}

<div class="row justify-content-center p-3">
    <div class="col-md-4 form-card">
        <form asp-action="DeleteFood" class="app-form" enctype="multipart/form-data">
            <h5 class="text-center">Are you sure you want to delete this food?</h5>
            <p><strong>Name: </strong>@Model.FoodName</p>
            <p><strong>Description: </strong>@Model.Description</p>
            <p><strong>Type: </strong>@Model.FoodTypeId</p>
            <p><strong>Price: </strong>@Model.Price</p>
            <p><strong>Image:</strong></p>
            @if (Model.Image != null)
            {
                <img src="@Model.Image" class="table-img mb-3" />
            }
            <br />
            <input type="hidden" asp-for="FoodId" />
            <a asp-action="Menu" class="btn btn-secondary">Cancel</a>
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>
