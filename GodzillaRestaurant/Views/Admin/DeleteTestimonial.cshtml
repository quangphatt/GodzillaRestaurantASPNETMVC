@model GodzillaRestaurant.Models.Testimonial
@{
    ViewData["Title"] = "Delete Testimonial";
}

<div class="row justify-content-center p-3">
    <div class="col-md-4 form-card">
        <form asp-action="DeleteTestimonial" class="app-form" enctype="multipart/form-data">
            <h5 class="text-center">Are you sure you want to delete this testimonial?</h5>
            <p><strong>Name: </strong>@Model.Name</p>
            <p><strong>Image:</strong></p>
            @if (Model.Image != null)
            {
                <img src="@Model.Image" class="table-img mb-3" />
            }
            <p><strong>Position: </strong>@Model.Position</p>
            <p><strong>Detail: </strong>@Model.Detail</p>
            <input type="hidden" asp-for="TestimonialId" />
            <a asp-action="Testimonials" class="btn btn-secondary">Cancel</a>
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
</div>
