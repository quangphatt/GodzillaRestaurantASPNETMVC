<section id="chefs" class="chefs">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h2>Chefs</h2>
            <p>Our Proffesional Chefs</p>
        </div>

        <div class="row">
            @foreach (Chef chef in ViewBag.Chefs)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="member" data-aos="zoom-in" data-aos-delay="300">
                        <img src=@(chef.Image != null ? chef.Image : "img/default_chef.jpg") class="img-fluid" alt="">
                        <div class="member-info">
                            <div class="member-info-content">
                                <h4>@chef.Name</h4>
                                <span>@chef.Position</span>
                            </div>
                            <div class="social">
                                <a target="_blank" href="https://www.instagram.com/@chef.Instagram"><i class="bi bi-instagram"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>