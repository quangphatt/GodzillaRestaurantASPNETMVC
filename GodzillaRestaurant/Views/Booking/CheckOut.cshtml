@{
    ViewData["Title"] = "Check Out";
}

<partial name="../Home/Partial/_HeaderPartial.cshtml" />
<section id="checkout-booking" class="checkout-booking main-section section-bg">
  <div class="container" data-aos="fade-up">
    <div class="text-center mb-3">
      <h4>Thanks for your Booking</h4>
      <span>We will contact you when we confirm this booking</span>
      <br />
      <span>Have A Nice Day !!!</span>
