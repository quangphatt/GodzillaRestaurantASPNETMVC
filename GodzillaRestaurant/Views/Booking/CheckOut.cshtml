    <div class="d-flex justify-content-center mt-3 gap-2">
      <button class="btn btn-primary" onclick="location.href='@Url.Action("AllBooking", "Booking")'">View All Booking</button>
      <button class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Home")'">Back to Home</button>
    </div>
  </div>
